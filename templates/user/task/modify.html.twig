{% extends "layout.html.twig" %}

{% block view_classes %}edit-resource-view{% endblock %}

{% block header %}
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="page-header">
          <h1>User <small>modify-resource</small></h1>
        </div>
    </div>
</div>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-xs-12 col-md-12">
        <ul class="nav nav-tabs" role="tablist">
            <li class="active"><a href="#main" data-toggle="tab">Main</a></li>
            <li><a href="#metadata" data-toggle="tab">Metadata</a></li>
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-md-6">
        <form method="post" class="tab-content">
            <div class="tab-pane active" id="main">
                {{ form_widget(form) }}
            </div>
            <div class="tab-pane" id="metadata">
                <div class="form-group">
                    <label for="identifier">Identifier</label>
                    <input class="form-control" id="identifier" value="{{ user.identifier }}" readonly />
                </div>
                <div class="form-group">
                    <label for="language">Language</label>
                    <input class="form-control" id="language" value="{{ user.language }}" readonly />
                </div>
                <div class="form-group">
                    <label for="revision">Revision</label>
                    <input class="form-control" id="revision" value="{{ user.revision }}" readonly />
                </div>
            </div>
            <button class="btn btn-success" type="submit">save changes</button>
            <a href="{{ url('hlx.security.user.list') }}" class="btn btn-primary">cancel and back to list</a>
        </form>
    </div>
</div>
{% endblock %}
