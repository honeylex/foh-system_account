{% extends "layout.html.twig" %}

{% block view_classes %}edit-resource-view{% endblock %}

{% block header %}
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="page-header">
          <h1>User <small>create-resource</small></h1>
        </div>
    </div>
</div>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-xs-12 col-md-6">
        <form method="post">
            <div class="tab-pane active" id="main">
                {{ form_widget(form) }}
            </div>
            <button class="btn btn-success" type="submit">create user</button>
            <a href="{{ url('hlx.security.user.list') }}" class="btn btn-primary">cancel and back to list</a>
        </form>
    </div>
</div>
{% endblock %}
