{% extends "layout.html.twig" %}

{% block view_classes %}login{% endblock %}

{% block header %}
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="page-header">
          <h1>Login</h1>
        </div>
    </div>
</div>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-xs-12 col-md-6">
        <form method="post" class="tab-content" action="{{ path('hlx.security.login.check') }}">
            <div class="tab-pane active" id="login">
                {{ form_widget(form) }}
            </div>
            <div class="form-actions">
                <button class="btn btn-success" type="submit">Login</button>
                <a href="/auth/facebook" class="btn btn-primary">Facebook</a>
                <a href="{{ url('hlx.security.registration') }}" class="btn btn-primary">Register</a>
                <a href="{{ url('hlx.security.password.forgot') }}">Forgot your password?<a/>
            </div>
        </form>
    </div>
</div>
{% endblock %}
