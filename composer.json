{
    "name": "honeylex/hlx-security",
    "type": "library",
    "description": "Security & user administration crate for Honeylex.",
    "license": "MIT",
    "prefer-stable": true,
    "require": {
        "php": ">=5.6.0",
        "symfony/security": "^2.8|^3.1",
        "gigablah/silex-oauth": "^2.0@dev",
        "pagerfanta/pagerfanta": "^1.0",
        "google/recaptcha": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Hlx\\Security\\": "lib/"
        }
    },
    "scripts": {
        "code-sniffer": "phpcs --extensions=php --standard=psr2 lib",
        "code-sniffer-autofix": "phpcbf --standard=psr2 -d tabWidth=4 src/"
    }
}
