{
    "name": "honeylex/hlx-security",
    "description": "Security & user administration crate for Honeylex.",
    "license": "MIT",
    "type": "library",
    "require": {
        "php": ">=5.6.0",
        "symfony/security": "~2.8|~3.1",
        "gigablah/silex-oauth": "~2.0@dev",
        "pagerfanta/pagerfanta": "~1.0",
        "google/recaptcha": "~1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.3",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Hlx\\Security\\": "lib/"
        }
    },
    "scripts": {
        "code-sniffer": "vendor/bin/phpcs --extensions=php --standard=psr2 lib"
    }
}
